{
    "name": "hello_world",
    "version": "1.0.0",
    "description": "hello world sample for NodeJS",
    "main": "app.js",
    "repository": "https://github.com/awslabs/aws-sam-cli/tree/develop/samcli/local/init/templates/cookiecutter-aws-sam-hello-nodejs",
    "author": "SAM CLI",
    "license": "MIT",
    "scripts": {
        "unit": "jest",
        "lint": "eslint '*.ts' --quiet --fix",
        "compile": "tsc",
        "test": "npm run compile && npm run unit",
        "build": "esbuild app.ts --bundle --minify --sourcemap --platform=node --target=es2020 --outfile=dist/index.js",
        "docker-build": "docker build --platform linux/amd64 -t docker-image:test .",
        "docker-run": "docker run --env-file .env --platform linux/amd64 -p 9000:8080 docker-image:test",
        "docker-test": "curl 'http://localhost:9000/2015-03-31/functions/function/invocations' -d @../events/event.json"
    },
    "dependencies": {
        "aws-sdk": "^2.1561.0",
        "mongodb": "^6.3.0"
    },
    "devDependencies": {
        "@types/aws-lambda": "^8.10.134",
        "@types/jest": "^29.2.0",
        "@types/node": "^20.11.19",
        "@types/react": "^18.2.57",
        "@typescript-eslint/eslint-plugin": "^5.10.2",
        "@typescript-eslint/parser": "^5.10.2",
        "esbuild": "^0.20.1",
        "eslint": "^8.8.0",
        "eslint-config-prettier": "^8.3.0",
        "eslint-plugin-prettier": "^4.0.0",
        "jest": "^29.2.1",
        "prettier": "^2.5.1",
        "ts-jest": "^29.0.5",
        "ts-node": "^10.9.1",
        "typescript": "^4.9.5"
    }
}
